    },
    "OpenAI GPT-4o": {
      "ai_languageModel": [
        [{ "node": "Marketing Agent", "type": "ai_languageModel", "index": 0 }]
      ]
    },
    "Marketing Memory": {
      "ai_memory": [
        [{ "node": "Marketing Agent", "type": "ai_memory", "index": 0 }]
      ]
    },
    "Tool: Trending Topics": {
      "ai_tool": [
        [{ "node": "Marketing Agent", "type": "ai_tool", "index": 0 }]
      ]
    },
    "Tool: SEO Keywords": {
      "ai_tool": [
        [{ "node": "Marketing Agent", "type": "ai_tool", "index": 1 }]
      ]
    }
  },
  "active": false,
  "settings": {
    "executionOrder": "v1",
    "saveManualExecutions": true
  },
  "meta": { "instanceId": "ai-company-v1" },
  "tags": [
